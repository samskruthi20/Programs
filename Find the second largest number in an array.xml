import java.util.TreeSet;

public class Main{

    public static void main(String[] args){

        int[] a = {5, 9, 1, 3, 9, 7};

        TreeSet<Integer> set = new TreeSet<>();

        for(int n : a){
            set.add(n);   // automatically sorted + unique
        }

        // remove largest
        set.remove(set.last());

        // now last() = second largest
        System.out.println(set.last());
    }
}

