public class Main {

    public static void main(String[] args) {

        int num = 371;

        int rem;
        int result = 0;
        int original = num;

        while (num != 0) {
            rem = num % 10;
            result = result + (rem * rem * rem);  // cube of each digit
            num = num / 10;
        }

        if (result == original) {
            System.out.println("Number is Armstrong");
        } else {
            System.out.println("Number is not Armstrong");
        }
    }
}



