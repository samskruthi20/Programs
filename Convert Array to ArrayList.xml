Using for-each loop


import java.util.ArrayList;

public class Main {
    
    public static void main(String[] args) {
        
        int[] a = {1, 3, 5, 3, 6, 78, 6, 7};
        
        ArrayList<Integer> list = new ArrayList<Integer>();
        
        for (int num : a) {
            list.add(num);
        }
        
        System.out.println(list);
    }
}
