public class Main {

    public static void main(String[] args) {

        String s = "automation";
        s = s.toLowerCase();

        int vowels = 0;
        int consonants = 0;

        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);

            if (c >= 'a' && c <= 'z') {   // ensure it's an alphabet
                if (c=='a' || c=='e' || c=='i' || c=='o' || c=='u') {
                    vowels++;
                } else {
                    consonants++;
                }
            }
        }

        System.out.println("Vowels: " + vowels);
        System.out.println("Consonants: " + consonants);
    }
}
