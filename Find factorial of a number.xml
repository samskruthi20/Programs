public class Main {

    public static void main(String[] args) {

        int num = 5;
        int result = 1;

        for (int i = 1; i <= num; i++) {
            result = result * i;
        }

        System.out.println(result);
    }
}



---------------------------------------------------------
using while loop


public class Main {

    public static void main(String[] args) {

        int num = 5;
        int result = 1;
        int i = 1;

        while (i <= num) {
            result = result * i;
            i++;
        }

        System.out.println(result);
    }
}


-------------------------------------------------------
Using do-while

public class Main {

    public static void main(String[] args) {

        int num = 5;
        int result = 1;
        int i = 1;

        do {
            result = result * i;
            i++;
        } while (i <= num);

        System.out.println(result);
    }
}
