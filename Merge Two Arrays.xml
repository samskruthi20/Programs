Without using ArrayList



import java.util.ArrayList;

class Main {
    public static void main(String[] args) {
        
       int[] a = {1, 2, 3, 2, 1};
       int[] b = {2,5,4,6,7};
       
     int[] c = new int[a.length + b.length];
     
     for(int i=0; i<a.length; i++){
         
         c[i]=a[i];
     }
     
     for(int i=0; i<b.length; i++){
         
         c[a.length+i] = b[i];
         
     }
     
     for(int num : c){
         
         System.out.print(num+ " ");
     }
    }
}